# https://github.com/etcd-io/website/blob/main/content/en/docs/v3.5/op-guide/configuration.md
# https://github.com/etcd-io/website/blob/main/content/en/docs/v3.5/op-guide/clustering.md
#[Member]
ETCD_NAME="{{ NODE_NAME }}"
ETCD_DATA_DIR="{{ ETCD_DATA_DIR }}"
ETCD_QUOTA_BACKEND_BYTES="{{ ETCD_QUOTA_BACKEND_BYTES }}"

ETCD_LISTEN_PEER_URLS="https://{{ inventory_hostname }}:2380"
ETCD_LISTEN_CLIENT_URLS="https://{{ inventory_hostname }}:2379,http://127.0.0.1:2379"

#[Clustering]
ETCD_INITIAL_ADVERTISE_PEER_URLS="https://{{ inventory_hostname }}:2380"
ETCD_ADVERTISE_CLIENT_URLS="https://{{ inventory_hostname }}:2379"
ETCD_INITIAL_CLUSTER="{{ ETCD_INITIAL_CLUSTER }}"
ETCD_INITIAL_CLUSTER_TOKEN="etcd-cluster"
ETCD_INITIAL_CLUSTER_STATE="{{ CLUSTER_STATE }}"

#[SSL]
ETCD_TRUSTED_CA_FILE=/etc/etcd/pki/etcd-ca.pem
ETCD_KEY_FILE=/etc/etcd/pki/etcd-server-key.pem
ETCD_CERT_FILE=/etc/etcd/pki/etcd-server.pem
ETCD_CLIENT_CERT_AUTH=true
ETCD_PEER_TRUSTED_CA_FILE=/etc/etcd/pki/etcd-ca.pem
ETCD_PEER_KEY_FILE=/etc/etcd/pki/etcd-server-key.pem
ETCD_PEER_CERT_FILE=/etc/etcd/pki/etcd-server.pem
ETCD_PEER_CLIENT_CERT_AUTH=true