apiVersion: v1
clusters:
- cluster:
    certificate-authority: /etc/kubernetes/pki/ca.pem
    server: https://{{ inventory_hostname }}:{{ APISERVER_SECURE_PORT }}
  name: {{ CLUSTER_NAME }}
contexts:
- context:
    cluster: {{ CLUSTER_NAME }}
    user: system:kube-controller-manager
  name: system:kube-controller-manager@{{ CLUSTER_NAME }}
current-context: system:kube-controller-manager@{{ CLUSTER_NAME }}
kind: Config
preferences: {}
users:
- name: system:kube-controller-manager
  user:
    client-certificate: /etc/kubernetes/pki/kube-controller-manager.pem
    client-key: /etc/kubernetes/pki/kube-controller-manager-key.pem